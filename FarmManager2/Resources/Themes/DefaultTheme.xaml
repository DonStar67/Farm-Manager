<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    
    <Style TargetType="{x:Type Button}">
        <Setter Property="Background" Value ="#8011E030"></Setter>
        <Setter Property="BorderBrush" Value="#0000"></Setter>
        <Setter Property="MinWidth" Value="120"></Setter>
        <Setter Property="Height" Value="40"></Setter>
    </Style>

    <Style TargetType="{x:Type DataGrid}">
        <Setter Property="Background" Value="#B0E5FD"></Setter>
        <Setter Property="BorderBrush" Value="#0000"></Setter>
    </Style>

    <Style TargetType="{x:Type Image}" x:Key="LogoImageStyle">
        <Setter Property="Source" Value="..\Images\LogoFarm.png"></Setter>
        <Setter Property="Width" Value="100"></Setter>
        <Setter Property="Height" Value="100"></Setter>
        <Setter Property="Margin" Value="10,10,0,0"></Setter>
        <Setter Property="HorizontalAlignment" Value="Left"></Setter>
        <Setter Property="VerticalAlignment" Value="Top"></Setter>
    </Style>

    <Style TargetType="{x:Type Window}" x:Key="WindowStyle">
        <Setter Property="Background" Value="#ffffff"></Setter>
        <Setter Property="FontFamily" Value="Roboto Flex"></Setter>
    </Style>


    <Style TargetType="{x:Type Window}" x:Key="HeaderStyle">
        <Setter Property="FontFamily" Value="Open Sans"></Setter>
        <Setter Property="FontSize" Value="16"></Setter>
        <Setter Property="Foreground" Value="#2D3748"></Setter>
    </Style>
              
    
</ResourceDictionary>